# AI Forge - 実用設定ファイル
# Discord設定のみ追加すれば即座に動作可能

# Discord Bot Configuration (要設定)
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_server_id_here

# AI API Keys - 実際のキーに置き換えてください
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_KEY_HERE_REPLACE_WITH_ACTUAL_KEY
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_ANTHROPIC_KEY_HERE_REPLACE_WITH_ACTUAL_KEY
GEMINI_API_KEY=AIzaSy-YOUR_GEMINI_KEY_HERE_REPLACE_WITH_ACTUAL_KEY

# GitHub Configuration (Code Reviewer用)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO_OWNER=daideguchi
GITHUB_REPO_NAME=ai-forge-community

# Discord Webhook URLs (GitHub連携用)
GITHUB_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url/github
GENERAL_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# RSS Feeds (Paper Summarizer用)
ARXIV_RSS_URLS=http://export.arxiv.org/rss/cs.AI,http://export.arxiv.org/rss/cs.LG,http://export.arxiv.org/rss/cs.CL

# Moderation Settings (Moderator用) - 実際のキーに置き換えてください
PERSPECTIVE_API_KEY=AIzaSy-YOUR_PERSPECTIVE_KEY_HERE_REPLACE_WITH_ACTUAL_KEY
TOXICITY_THRESHOLD=0.7

# Database Configuration
DATABASE_URL=sqlite:///ai_community.db
DB_PASSWORD=ai_forge_secure_2024

# Supabase Configuration (高度な機能用) - オプション
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SECRET_KEY=your_supabase_secret_key_here

# PostgreSQL Connection (本番環境用) - オプション
POSTGRES_CONNECTION_STRING=postgresql://user:password@host:5432/database

# n8n Configuration (自動化ワークフロー用) - オプション
N8N_URL=https://your-n8n-instance.com
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook
N8N_API_KEY=your_n8n_api_key_here

# Slack Integration (将来の拡張用) - オプション
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_APP_ID=your_slack_app_id_here
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here
SLACK_VERIFICATION_TOKEN=your_slack_verification_token_here

# Server Configuration
WEBHOOK_PORT=5001
WEBHOOK_HOST=0.0.0.0

# Development Settings
DEBUG=true
AUTO_LEARNING_ENABLED=true
LIGHTWEIGHT_MODE=true